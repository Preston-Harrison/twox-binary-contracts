{
  "extends": "solhint:recommended",
  "plugins": ["prettier"],
  "rules": {
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "func-visibility": ["error", { "ignoreConstructors": true }],
    "compiler-version": ["error", "0.8.16"],
    "not-rely-on-time": "off"
  }
}
